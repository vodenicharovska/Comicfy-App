@model NewComicBookVM
@using Comicfy.Data

@{ 
    ViewData["Title"] = "Уреди стрип";
}

<div class="row">
    <div class="col-md-8 offset-2">
        <p>
            <h4>Уреди стрип за продажба</h4>
        </p>

        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Image" class="control-label"></label>
                                <input asp-for="Image" class="form-control" />
                                <span asp-validation-for="Image" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Title" class="control-label"></label>
                                <input asp-for="Title" class="form-control" />
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Published" class="control-label"></label>
                                <input asp-for="Published" class="form-control" />
                                <span asp-validation-for="Published" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Language" class="control-label"></label>
                                <input asp-for="Language" class="form-control" />
                                <span asp-validation-for="Language" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Price" class="control-label"></label>
                                <input asp-for="Price" type="number" class="form-control" />
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="WriterId" class="control-label"></label>
                                <select asp-for="WriterId" class="form-control" asp-items="ViewBag.Writers"></select>
                                <span asp-validation-for="WriterId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="PencilerId" class="control-label"></label>
                                <select asp-for="PencilerId" class="form-control" asp-items="ViewBag.Pencilers"></select>
                                <span asp-validation-for="PencilerId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="CoverArtistId" class="control-label"></label>
                                <select asp-for="CoverArtistId" class="form-control" asp-items="ViewBag.CoverArtists"></select>
                                <span asp-validation-for="CoverArtistId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="SellingCategory" class="control-label"></label>
                                <select asp-for="SellingCategory" class="form-control" asp-items="Html.GetEnumSelectList<SellingCategory>()"></select>
                                <span asp-validation-for="SellingCategory" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="CharacterIds" class="control-label"></label>
                                <select asp-for="CharacterIds" class="form-control" asp-items="ViewBag.MainCharacters" multiple></select>
                                <span asp-validation-for="CharacterIds" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label asp-for="ShortDescription" class="control-label"></label>
                                <textarea asp-for="ShortDescription" class="form-control"></textarea>
                                <span asp-validation-for="ShortDescription" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4 offset-4 text-center">
                        <img width="100%" id="ImagePreview"/>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Уреди" class="btn btn-outline-success float-right"/>
                        <a class="btn btn-outline-secondary" asp-action="Index">Откажи</a>
                    </div>

                </form>

            </div>
        </div>
    </div>
</div>

@section Scripts{ 
    <script>
        $(document).ready(function () {
            var output = document.getElementById("ImagePreview");
            output.src = $("#Image").val();
        })

        $("#Image").on("change", function () {
            var output = document.getElementById("ImagePreview");
            output.src = $(this).val();
        })
    </script>
}