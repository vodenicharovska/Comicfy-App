@model CoverArtist

@{
    ViewData["Title"] = "Уреди сликар на корица";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Уреди сликар на корица</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Зачувај" class="btn btn-outline-success float-right" />
                        <a class="btn btn-outline-secondary" asp-action="Index">Откажи</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>