@model CoverArtist

@{
    ViewData["Title"] = "Избриши сликар на корица";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Дали сте сигурни дека сакате да го избришете @Model.Name?</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" readonly />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <form asp-action="Delete">
                            <input type="hidden" asp-for="Id" />
                            <input type="submit" value="Потврди" class="btn btn-outline-danger float-right"/>
                        </form>
                        <a class="btn btn-outline-secondary" asp-action="Index">Откажи</a>
                    </div>
            </div>
        </div>
    </div>
</div>
